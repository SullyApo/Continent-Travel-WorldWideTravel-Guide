{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Rasa Rules Schema",
    "type": "object",
    "properties": {
      "version": {
        "type": "string",
        "enum": ["3.1"]
      },
      "rules": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "rule": { "type": "string" },
            "steps": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "intent": { "type": "string" },
                  "action": { "type": "string" },
                  "condition": { "type": "array" }
                },
                "required": ["intent", "action"]
              }
            }
          },
          "required": ["rule", "steps"]
        }
      }
    },
    "required": ["version", "rules"]
  }