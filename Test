#include <stdio.h>
#include <stdlib.h>

struct rationnel{
    int numerateur;
    int denominateur;
};
typedef struct rationnel rationnel;

rationnel somme_rationnels(rationnel a, rationnel b){
    int n1, n2;
    rationnel c;
    c.numerateur = a.numerateur*b.denominateur + b.numerateur*a.denominateur;
    c.denominateur = a.denominateur*b.denominateur;
    n1 = c.numerateur;
    n2 = c.denominateur;
    while(n1 != 1){
        n1 = c.numerateur;
        n2 = c.denominateur;
        while(n1 != n2){
            if (n1 > n2){
                n1 = n1 - n2;
            }
            else{
                n2 = n2 - n1;
            }
        }
        if(n1 == 1){
            return c;
        }
        else{
            c.numerateur = c.numerateur/n1;
            c.denominateur = c.denominateur/n1;
        }
    }
}
int main(){
    rationnel a = {45,500}, b = {10,228};
    somme_rationnels(a,b);
    printf("La somme de %d/%d et %d/%d est %d/%d\n", a.numerateur, a.denominateur, b.numerateur, b.denominateur, somme_rationnels(a,b).numerateur, somme_rationnels(a,b).denominateur);
    return 0;
}
